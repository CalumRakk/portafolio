---
import { Icon } from "astro-icon/components";

import data from "../data.json";

const { name, label, summary, location, profiles, email, phone } = data.basics;
const { city, region } = location;
const contacto = [email, phone].join(" | ");
---

<div class="contenedor">
  <div class="texto">
    <div>
      <h1 class="titulo">{name}</h1>
      <p class="label color_gray">{label}</p>
    </div>
    <div>
      <p class="summary">
        {summary}
      </p>
    </div>
    <div class="icons">
      <ul>
        {
          profiles.map((profile) => (
            <li>
              <a href={profile.url} class="icon" target="_blank">
                <Icon name={profile.icon_filename} />
              </a>
            </li>
          ))
        }
        <li>
          <a href=`mailto:${email}` class="icon">
            <Icon name="material-symbols--mail-outline" />
          </a>
        </li>
        <li>
          <a href=`tel:${phone}` class="icon">
            <Icon name="mdi--phone" />
          </a>
        </li>
      </ul>
      <div class="ubicacion">
        <Icon class="icon2" name="uiw--environment" />
        <p class="parrafo_ubicacion color_gray">{city}, {region}</p>
      </div>
    </div>
    <div class="icons-no-print">
      <p>{contacto}</p>
      <div class="ubicacion">
        <Icon class="icon2" name="uiw--environment" />
        <p class="parrafo_ubicacion color_gray">{city}, {region}</p>
      </div>
    </div>
  </div>
  <div class="imagen">
    <img src="https://c.wallhere.com/images/a4/4a/bc0043040759d410a15405f56ef3-2072969.jpg!d"/>
    <div></div>
  </div>
</div>

<style>
  .summary{
    margin-top:4px ;
  }
  p{
    font-size: 1em;
  }
  ul {
    list-style: none;
    padding: 0;
    display: flex;

    flex-wrap: wrap;
    align-content: space-between;
    gap: 0.3em;
    margin: 0px;
  }
  .label {
    text-wrap: balance;
    font-size: 1em;
    margin: 0px;
  }
  .titulo {
    margin-bottom: 0.25em;
    text-wrap: nowrap;
    text-transform: capitalize;
    font-size: 2.5em;
    font-weight: 700;
    margin-top: 0px;
  }
  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
    width: 128px;
    height: 128px;
   
  }

  .contenedor {
    margin-top: 2vh;
    display: flex;
    gap: 4%;
    /* margin-top: 1vh; */
  }
  .icon {
    color: #777;
    display: inline-flex;
    border: 1px solid #eee;
    padding: 6px;
    border-radius: 20%;
    transition: all 0.26s ease-in-out;
  }
  .icon2 {
    color: #777;
    display: inline-flex;
    padding: 6px;
    cursor: auto;
  }
  .icon:hover {
    background: #eee;
    border: 1px solid #ddd;
  }
  .icons {
    display: flex;
    justify-content: space-between;
  }
  .parrafo_ubicacion {
    margin: 0px;
    padding: 0px;
  }
  .ubicacion {
    display: flex;
    gap: 6px;
    align-items: center;
    font-size: 0.8em;
  }
  .icons-no-print {
    display: none;
  }
  @media (width <= 700px) {
    .contenedor {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .texto {
      justify-content: center;
      align-items: center;
      text-align: center;
    }
    .icons {
      width: 100%;
      justify-content: space-around;
    }

    .icons {
      display: flex;
      flex-wrap: wrap;
      gap: 1em;
    }
  }
  @media print {
    .icons-no-print {
      display: flex;
      font-size: 0.7em;
      justify-content: space-between;
    }
    .icon2 {
      display: inline-flex;
      padding: 0px;
      cursor: auto;
    }
    .icons {
      display: none;
    }
  }
</style>

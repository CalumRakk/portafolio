---
import data from "../data.json";
---

<section>
  <h2>Proyectos</h2>
  <ul>
    {
      data.projects.map((item) => (
        <li>
          <article>
            <header>
              <h4>{item.name}</h4>
              <a href="{ item.url }" class="icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="1em"
                  height="1em"
                  viewBox="0 0 24 24"
                  data-astro-cid-hpnw4vwy=""
                  data-astro-source-file="/home/leo/Escritorio/flexbox/src/components/header.astro"
                  data-astro-source-loc="30:12"
                >
                  {" "}
                  <path
                    fill="currentColor"
                    d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
                    data-astro-cid-hpnw4vwy=""
                    data-astro-source-file="/home/leo/Escritorio/flexbox/src/components/header.astro"
                    data-astro-source-loc="31:14"
                  />{" "}
                </svg>
              </a>
            </header>
            <p class="color_gray parrafo">{item.description}</p>
          </article>
        </li>
      ))
    }
  </ul>
</section>

<style>
  header {
    margin-top: 6px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-content: space-between;
    gap: 10px;
  }
  article {
    border: 1px solid #eee;
    padding: 0.4em;
    flex-basis: 100px;
    width: 200px;
    border-radius: 1em;
  }
  h4 {
    margin-top: 0px;
  }

  .icon {
    color: #777;
  }
  .parrafo {
    text-wrap: balance;
    margin: 0px;
  }
  @media (width <= 700px) {
    ul {
      justify-content: space-around;
    }
  }
  @media print {
    section {
      break-inside: avoid;
    }
  }
</style>
